                        <Icon:PackIconMaterial Kind="ArrowLeft"/>
                    </Button>

                    <Button Background="#20ffffff" Grid.Column="1" Margin="0"  Width="290" Style="{StaticResource WalletOperationsButtons}" Command="{Binding DepositCommand}">Deposit</Button>

                </StackPanel>

            </StackPanel>



